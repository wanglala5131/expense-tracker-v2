<form action="/categories/{{category._id}}?_method=PUT" method="POST"
  class="categoriesCreate mx-auto enter-form d-flex justify-content-center">
  <div class="row">
    <div class="col-12">
      <h4 class="text-center">請輸入要新增的類別</h4>
      <p class="text-center">*必填欄位</p>
    </div>
    <div class="col-12 d-flex align-items-center justify-content-between">
      <label for="name" class="col-3 text-right">名稱*：</label>
      <input class="flex-grow-1" type="text" required="required" id="name" name="name" value="{{category.name}}">
    </div>
    <div class="col-12 d-flex align-items-center">
      <label for="categoryEN" class="col-3 text-right">英文名*：</label>
      <input class="flex-grow-1 input-icon" type="text" required="required" name="categoryEN" id="categoryEN"
        value="{{category.categoryEN}}">
    </div>
    <div class="col-12 d-flex align-items-center">
      <span for="categoryEN" class="col-3 text-right">ICON*：</span>
      <input type="text" class="m-5 icon-input" style="display:none" name="icon">
      <i id="icon" class="{{category.icon}}" style="font-size: 40px; color: #5c968a;"></i>
      <button type="button" class="btn cancel-button mt-2 ml-3" data-toggle="modal" data-target="#changeIconButton">
        選擇ICON
      </button>
    </div>
    <!--modal-->
    <div class="modal fade" id="changeIconButton" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
      aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">自行輸入 或 點選ICON</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body row m-auto container">
            <div class="col-12 mb-3 pb-3" style="border-bottom: 2px solid #eee;">
              <input type="text" class="col-9 mr-2 self-input" placeholder="輸入class name 例如：fas fa-home" d>
              <input type="buton" class="col-2 btn btn-info self-btn" value="送出" data-dismiss="modal">
              <p>請選擇<a href="https://fontawesome.com/">fontawesome</a>免費ICON</p>
            </div>
            <div class="icon-buttons p-3">

              <button type="button" class="btn btn-secondary changeIcon m-1 col-2" data-dismiss="modal"><i
                  class="fas fa-home"></i></button>
              <button type="button" class="btn btn-secondary changeIcon m-1 col-2" data-dismiss="modal"><i
                  class="fas fa-couch"></i></button>
              <button type="button" class="btn btn-secondary changeIcon m-1 col-2" data-dismiss="modal"><i
                  class="far fa-credit-card"></i></button>
              <button type="button" class="btn btn-secondary changeIcon m-1 col-2" data-dismiss="modal"><i
                  class="fas fa-tv"></i></button>
              <button type="button" class="btn btn-secondary changeIcon m-1 col-2" data-dismiss="modal"><i
                  class="fas fa-car"></i></button>
              <button type="button" class="btn btn-secondary changeIcon m-1 col-2" data-dismiss="modal"><i
                  class="fas fa-shuttle-van"></i></button>
              <button type="button" class="btn btn-secondary changeIcon m-1 col-2" data-dismiss="modal"><i
                  class="fas fa-bicycle"></i></button>
              <button type="button" class="btn btn-secondary changeIcon m-1 col-2" data-dismiss="modal"><i
                  class="fas fa-glass-cheers"></i></button>
              <button type="button" class="btn btn-secondary changeIcon m-1 col-2" data-dismiss="modal"><i
                  class="fas fa-utensils"></i></button>
              <button type="button" class="btn btn-secondary changeIcon m-1 col-2" data-dismiss="modal"><i
                  class="fas fa-cocktail"></i></button>
              <button type="button" class="btn btn-secondary changeIcon m-1 col-2" data-dismiss="modal"><i
                  class="fas fa-pizza-slice"></i></button>
              <button type="button" class="btn btn-secondary changeIcon m-1 col-2" data-dismiss="modal"><i
                  class="fas fa-tshirt"></i></button>
              <button type="button" class="btn btn-secondary changeIcon m-1 col-2" data-dismiss="modal"><i
                  class="fas fa-dumbbell"></i></button>
              <button type="button" class="btn btn-secondary changeIcon m-1 col-2" data-dismiss="modal"><i
                  class="fas fa-running"></i></button>
              <button type="button" class="btn btn-secondary changeIcon m-1 col-2" data-dismiss="modal"><i
                  class="fab fa-leanpub"></i></button>
              <button type="button" class="btn btn-secondary changeIcon m-1 col-2" data-dismiss="modal"><i
                  class="fas fa-heart"></i></button>
              <button type="button" class="btn btn-secondary changeIcon m-1 col-2" data-dismiss="modal"><i
                  class="fas fa-clinic-medical"></i></button>
              <button type="button" class="btn btn-secondary changeIcon m-1 col-2" data-dismiss="modal"><i
                  class="fas fa-syringe"></i></button>
              <button type="button" class="btn btn-secondary changeIcon m-1 col-2" data-dismiss="modal"><i
                  class="fas fa-grin-beam"></i></button>
              <button type="button" class="btn btn-secondary changeIcon m-1 col-2" data-dismiss="modal"><i
                  class="fas fa-gift"></i></button>
              <button type="button" class="btn btn-secondary changeIcon m-1 col-2" data-dismiss="modal"><i
                  class="fas fa-tools"></i></button>
              <button type="button" class="btn btn-secondary changeIcon m-1 col-2" data-dismiss="modal"><i
                  class="fas fa-pen"></i></button>
              <button type="button" class="btn btn-secondary changeIcon m-1 col-2" data-dismiss="modal"><i
                  class="fas fa-paw"></i></button>
              <button type="button" class="btn btn-secondary changeIcon m-1 col-2" data-dismiss="modal"><i
                  class="fas fa-dog"></i></button>
              <button type="button" class="btn btn-secondary changeIcon m-1 col-2" data-dismiss="modal"><i
                  class="fas fa-cat"></i></button>

            </div>

          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
    <div class="enter-button col-12 my-4 d-flex justify-content-around">
      <a class="btn cancel-button" href="/categories">返回類別管理</a>
      <button type="submit" class="btn create-button">更新類別</button>
    </div>
  </div>
</form>