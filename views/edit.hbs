<form action="/record/{{record._id}}?_method=PUT" method="POST"
  class="mx-auto enter-form d-flex justify-content-center">
  <div class="row">
    <div class="col-12">
      <h4 class="text-center">請輸入你的支出</h4>
      <p class="text-center">*必填欄位</p>
    </div>
    <div class="col-12 d-flex align-items-center justify-content-between">
      <label for="name">名稱*：</label>
      <input class="flex-grow-1" type="text" required="required" name="name" id="name" placeholder="e.g.午餐、晚餐"
        value="{{record.name}}">
    </div>
    <div class="col-12 d-flex align-items-center">
      <label for="date">日期*：</label>
      <input class="flex-grow-1 input-date" type="date" required="required" name="date" id="date"
        value="{{record.date}}">

    </div>
    <div class="col-12 d-flex align-items-center">
      <label for="category">類別*：</label>
      <select class="flex-grow-1" name="category" required="required" id="category">

        {{#each category}}
        <option value="{{this.name}}" {{#if (equal this.name ../record.category)}}selected{{/if}}>
          {{this.name}}
        </option>
        {{/each}}

      </select>
    </div>
    <div class="col-12 d-flex align-items-center">
      <label for="amount">金額*：</label>
      <input class="flex-grow-1" type="number" min="0" required="required" name="amount" id="amount"
        value="{{record.amount}}">
    </div>
    <div class="col-12 d-flex align-items-center">
      <label for="merchant">商家 ：</label>
      <input class="flex-grow-1" type="text" name="merchant" id="merchant" value="{{record.merchant}}">
    </div>
    <div class=" col-12 d-flex align-items-center">
      <label for="remarks">備註 ：</label>
      <textarea class="flex-grow-1" id="remarks" name="remarks">{{record.remarks}}</textarea>
    </div>
    <div class="enter-button col-12 my-4 d-flex justify-content-around">
      <a class="btn cancel-button" href="/">返回首頁</a>
      <button type="submit" class="btn create-button">更新項目</button>
    </div>
  </div>
</form>